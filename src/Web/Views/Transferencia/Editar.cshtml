@model EditarTransferenciaForm
@{ ViewBag.Title = "Nova Transferência"; }

@using (Html.BeginForm("Editar", "Transferencia"))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form">
        <p>
            <div>De:</div>
            <div>@Html.DropDownListFor(x => x.ContaOrigemId, new SelectList(Model.Contas, "Id", "Nome", Model.ContaOrigemId), new { style="width: 200px" })</div>
        </p>
        <p>
            <div>Para:</div>
            <div>@Html.DropDownListFor(x => x.ContaDestinoId, new SelectList(Model.Contas, "Id", "Nome", Model.ContaDestinoId), new { style = "width: 200px" })</div>
        </p>
        <p>
            <div>@Html.LabelFor(x => x.Valor)</div>
            <div>@Html.TextBoxFor(x => x.Valor)</div>
        </p>
        <p>
            <input type="submit" value="Salvar">        
        </p>
    </div>
}